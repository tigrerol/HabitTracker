// Shared Configuration Settings

// Product Info
PRODUCT_NAME = HabitTracker
PRODUCT_BUNDLE_IDENTIFIER = com.example.habittracker

// Development Team & Code Signing
DEVELOPMENT_TEAM = 
CODE_SIGN_STYLE = Automatic
CODE_SIGN_ENTITLEMENTS = Config/HabitTracker.entitlements

// Deployment
IPHONEOS_DEPLOYMENT_TARGET = 18.0
SUPPORTED_PLATFORMS = iphoneos iphonesimulator
TARGETED_DEVICE_FAMILY = 1,2

// Swift
SWIFT_VERSION = 6.0
SWIFT_STRICT_CONCURRENCY = complete
ENABLE_STRICT_SWIFT_CONCURRENCY_CHECKS = YES

// Build Settings
ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES = YES
ENABLE_BITCODE = NO
SKIP_INSTALL = NO

// Architecture
ARCHS[sdk=iphoneos*] = arm64
ARCHS[sdk=iphonesimulator*] = arm64 x86_64

// Versioning
MARKETING_VERSION = 1.0
CURRENT_PROJECT_VERSION = 1

// Other Settings
GENERATE_INFOPLIST_FILE = YES
INFOPLIST_KEY_UIApplicationSceneManifest_Generation = YES
INFOPLIST_KEY_UIApplicationSupportsIndirectInputEvents = YES
INFOPLIST_KEY_UILaunchScreen_Generation = YES
INFOPLIST_KEY_UISupportedInterfaceOrientations = UIInterfaceOrientationPortrait UIInterfaceOrientationLandscapeLeft UIInterfaceOrientationLandscapeRight
INFOPLIST_KEY_UISupportedInterfaceOrientations_iPad = UIInterfaceOrientationPortrait UIInterfaceOrientationPortraitUpsideDown UIInterfaceOrientationLandscapeLeft UIInterfaceOrientationLandscapeRight